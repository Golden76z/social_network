FROM node:20-alpine

# Install dumb-init for proper signal handling
RUN apk add --no-cache dumb-init

WORKDIR /app

# Create non-root user earlier to avoid permission issues
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy package files first for layer caching
COPY package*.json ./
RUN npm install

# Copy source code with correct ownership for development
COPY . .

# Give permission to nextjs user on the whole app
USER nextjs

# Set up for live development
EXPOSE 3000

ENV NODE_ENV=development
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"
ENV CHOKIDAR_USEPOLLING=true

CMD ["npm", "run", "dev"]
