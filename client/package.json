{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron:watch\"",
    "electron:watch": "nodemon --watch electron --ext ts --exec \"npm run electron:compile && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && npm run electron:compile && electron-builder",
    "electron:serve": "cross-env NODE_ENV=production electron .",
    "postinstall": "npm run electron:compile"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next": "15.3.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5",
    "@types/webpack": "^5.28.5",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.28.0",
    "eslint-config-next": "15.3.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "ts-jest": "^29.3.4",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.yourcompany.client",
    "productName": "Client App",
    "directories": {
      "output": "release",
      "app": "."
    },
    "files": [
      "out/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public"
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
